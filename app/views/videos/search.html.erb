<div class="videos-search">
  <div class="columns">
    <div class="column col-3 hide-sm">
      <%= render 'shared/sidebar' %>
    </div>
    <div class="column col-9 col-xs-12">
      <div class="columns">
        <div class="column col-12 col-xs-12">
          <div class="text-center" style="padiing: 16px; font-size: 16px; font-weight: bold;">
            『<%= params[:search] %>』がついた動画
          </div>
        </div>
        <% @videos.each do |video| %>
          <div class="column col-4 col-xs-12" style="padding: 0px 10px;">
            <%= link_to video_path(video), style: "text-decoration: none;" do %>
              <div class="tile">
                <div class="tile-icon">
                  <%= image_tag video.thumbnail, style: "width: 100px; height: 66px;" %>
                </div>
                <div class="tile-content">
                  <h2 style="font-size: 1em; font-weight: bold; margin: 0px;"><%= video.title %></h2>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
