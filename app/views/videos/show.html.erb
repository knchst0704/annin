<div class="container">
  <div class="col-md-12">
    <div class="vs_vthmb">
      <%= image_tag @video.thumbnail %>
    </div>
    <div class="vs_vttl">
      <h1><%= @video.title %></h1>
    </div>
    <div class="vs_vtg">
      <ul>
        <% @video.tags.each do |tag| %>
          <li class="label label-default">
            <i class="icon ion-ios-pricetag-outline"></i>&nbsp;<%= tag %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="vs_vmt">
      <span>
        <i class="icon ion-play"></i>&nbsp;<%= @video.pv %>
      </span>
    </div>
  </div>
  <% @related_videos.each do |video| %>
    <div class="columns">
      <div class="column col-3 col-xs-12">
        <%= link_to video_path(video), style: "text-decoration: none;" do %>
          <div class="card">
            <div class="card-image">
              <%= image_tag video.thumbnail, style: "width: 100%;height:160px;object-fit: cover;" %>
            </div>
            <div class="card-header">
              <h3 class="card-title"><%= video.title %></h3>
              <h6 class="card-meta"><i class="icon ion-play"></i>&nbsp;<%= video.pv %></h6>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
