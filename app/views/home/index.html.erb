<div class="home-index">
  <div class="columns ">
    <div class="column col-3 hide-sm">
      <div class="card">
        <div class="text-center">
          <h5>人気のタグ</h5>
        </div>
        <div class="divider"></div>
        <div style="padding-left: .5rem;">
          <% @tags.each do |tag| %>
            <div class="chip-sm" style="margin-bottom: .5rem; background-color: pink; color: white;">
              <%= tag.name %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="column col-9 col-xs-12">
      <div class="columns">
        <div class="column col-12 col-xs-12">
          <ul class="tab tab-block">
            <li class="tab-item active">
              <a href="#">人気</a>
            </li>
            <li class="tab-item">
              <a href="#">新着</a>
            </li>
            <li class="tab-item">
              <a href="#">ランキング</a>
            </li>
          </ul>
        </div>
        <% @videos.each do |video| %>
          <div class="column col-3 col-xs-12">
            <%= link_to video_path(video), style: "text-decoration: none;" do %>
              <div class="card">
                <div class="card-image">
                  <%= image_tag video.thumbnail, style: "width: 100%;height:160px;object-fit: cover;" %>
                </div>
                <div class="card-header">
                  <h3 class="card-title"><%= video.title %></h3>
                  <h6 class="card-meta"><i class="icon ion-play"></i>&nbsp;<%= video.pv %></h6>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="pagination-wrapper text-center">
        <%= paginate @videos %>
      </div>
    </div>
  </div>
</div>
